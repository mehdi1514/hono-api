{
    "version": 2,
    "buildCommand": "pnpm build",
    "builds": [
      {
        "src": "dist/index.js",
        "use": "@vercel/node",
        "config": {
            "includeFiles": ["dist/**"]
        }
      }
    ],
    "outputDirectory": "dist",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "dist/index.js"
        }
    ]
  }